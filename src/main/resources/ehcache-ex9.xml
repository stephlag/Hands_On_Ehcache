<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="http://ehcache.org/ehcache.xsd"
         updateCheck="true"
         dynamicConfig="true"
         monitoring="on"
         maxBytesLocalHeap="400M"
         maxBytesLocalOffHeap="400M"
      name="arcManager">

  <managementRESTService enabled="true" bind="localhost:9888"/>

  <diskStore path="arc"/>

  <cache
         name="wine1"
		maxBytesLocalHeap="200M"
		maxBytesLocalOffHeap="200M"
		
      >
  </cache>

  <cache
         name="wine2"

      >
  </cache>

  <cache
         name="wine3"
		maxBytesLocalHeap="160M"
		maxBytesLocalOffHeap="160M"
      >
  </cache>

</ehcache>